<div class="contents">
    <div class="inputerror">
        <% if flash[:notice] %>
            <p><%= flash[:notice] %></p>
        <% end %>
    </div>
    <div class="inputwindow">
        <p>ログイン</p>
        <%= form_tag "/login", method: :post do %>
            <p><%= label_tag :uid, "ユーザーID" %></p>
            <p><%= text_field_tag :uid %></p>
            <p><%= label_tag :pass, "パスワード" %></p>
            <p><%= password_field_tag :password %></p>
            <%= submit_tag "ログイン" %>
        <% end %>
    </div>
    <%= link_to '登録', "signin" %>
</div>


