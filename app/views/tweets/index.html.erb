<% if flash[:notice] %>
    <div class="notice-window">
        <% timecount = Time.current %>
        <%= flash[:notice] %>
    </div>
<% end %>
    


<div class="contents">
    <div class="sidebar">
        <div class="sidecontents">
            <h1>Twitter<br>Modoki</h1>
            <ul class="sidebar-navi">
                <li><%= link_to 'Home', "#" %></li>
                <li><%= link_to '話題を検索', "#" %></li>
                <li><%= link_to '通知', "#" %></li>
                <li><%= link_to 'メッセージ', "#" %></li>
                <li><%= link_to 'リスト', "#" %></li>
                <li><%= link_to 'プロフィール', "#" %></li>
                <li><%= link_to 'もっと見る', "#" %></li>
            </ul>
            <p><%= button_to 'ツイート', "/tweets/new", method: :get %></p>
        </div>
    </div>

    <div class="main-content">
        <% @tweets.each do |tweets| %>
            <div class="cell">
                <div class="menu">
                    <div class="time"><%= ((Time.now-tweets.tdate)/60).floor %>分前
                    </div>
                    <div class="edit-menu">
                        <%= link_to '編集', "/tweets/#{tweets.id}/edit" , class: "hoge"%>
                        <%= link_to '削除', "/tweets/#{tweets.id}", class: "hoge", method: :delete %>
                    </div>
                </div>
                <p class="message"><%= tweets.message %></p>
            </div>
        <% end %>
    </div>
</div>
